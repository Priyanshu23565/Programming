// âœ… Abstract class - defines template
abstract class ATM {
    abstract void checkBalance();
    abstract void withdrawMoney(double amount);

    // Non-abstract method
    void insertCard() {
        System.out.println("Card Inserted.");
    }
}

// âœ… Child class - real logic implemented
class SBIATM extends ATM {
    double balance = 10000;

    void checkBalance() {
        System.out.println("Available Balance: â‚¹" + balance);
    }

    void withdrawMoney(double amount) {
        if (amount <= balance) {
            balance -= amount;
            System.out.println("â‚¹" + amount + " withdrawn successfully.");
        } else {
            System.out.println("Insufficient Balance!");
        }
    }
}

// âœ… Main code - user side
public class Main {
    public static void main(String[] args) {
        ATM myAtm = new SBIATM();  // ðŸ§  abstraction in action
        myAtm.insertCard();
        myAtm.checkBalance();
        myAtm.withdrawMoney(4000);
        myAtm.checkBalance();
    }
}
